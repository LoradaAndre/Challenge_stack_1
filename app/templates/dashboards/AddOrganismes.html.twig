{% extends 'base.html.twig' %}

{% block title %}Ajout organisme de formation{% endblock %}

{% block body %}



  <div class="min-h-screen flex flex-col">
    <div class="flex-1 flex flex-row ">
        
        <nav class="flex flex-col justify-between items-center p-6 bg-white shadow border-solid border-grey border">
            <div class="flex-1  space-x-4">
                <div class="flex flex-col items-center">
                    <span class="h-20 w-20 mb-4 rounded-full overflow-hidden bg-gray-300">
                        <!-- User's avatar goes here -->
                    </span>
                    <span class="font-medium text-gray-700">Audrey Hossepian</span>
                </div>
            </div>
            <div class="flex-1 flex flex-col space-x-4 justify-evenly">
            <p><a>Organismes</a></p>
            <p classe="m-0"><a>Classe</a></p>
            <p><a>Eleves</a></p>
            <p><a>Cours</a></p>
            </div>
            <div class="flex-1 flex flex-col-reverse space-x-4 items-bottom mt-auto">
                <p><a>Modifier les informations du profil</a></p>
            </div>
        </nav>

        <main class="flex-1 overflow-x-hidden overflow-y-auto bg-gray-200">
            <div class="container mx-auto  h-full">
                
                <div class="bg-white shadow  h-full p-4 sm:p-6 xl:p-8 ">
                <div class="font-bold text-black tracking-wide text-xl mb-16">Tableau de bord</div>

                <h1 class="text-2xl font-bold mb-4">Ajouter un organisme de formation</h1>

                <form>
                    <div class="mb-4">
                        <label for="nom_organisme" class="block text-sm font-medium text-gray-700">Nom de l'organisme</label>
                        <input type="text" id="nom_organisme" name="nom_organisme" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" placeholder="Placeholder" required>
                    </div>

                    <div class="mb-4">
                        <label class="block text-sm font-medium text-gray-700">Logo</label>
                        <div class="flex items-center">
                            <div class="flex-shrink-0 h-12 w-12">
                                <!-- Display the uploaded image here using the `src` attribute -->
                                <img class="h-12 w-12 rounded-full" src="{{ asset('path/to/default-image.png') }}" alt="Default image">
                            </div>
                            <div class="ml-4">
                                <div class="flex-1">
                                    <input type="file" id="logo" name="logo" class="hidden">
                                    <label for="logo" class="cursor-pointer bg-white py-2 px-3 border border-gray-300 rounded-md shadow-sm text-sm leading-4 font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">Uploader</label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="flex mt-6">
                        <button type="submit" class="inline-flex items-center px-4 py-2 bg-blue-500 hover:bg-blue-700 text-white font-bold rounded-md">Ajouter</button>
                        <button type="button" class="ml-2 inline-flex items-center px-4 py-2 bg-red-500 hover:bg-red-700 text-white font-bold rounded-md">Supprimer</button>
                    </div>
                </form>
            </div>
        </main>
        
    </div>
</div>

{% endblock %}