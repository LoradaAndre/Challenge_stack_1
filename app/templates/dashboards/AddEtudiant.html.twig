{% extends 'base.html.twig' %}

{% block title %}Ajouter un étudiant dans la classe{% endblock %}

{% block body %}
<div class="min-h-screen flex flex-col">
    <div class="flex-1 flex flex-row">
        
        {% include '/dashboards/navbar.html.twig' %}

        <main class="flex-1 overflow-x-hidden overflow-y-auto bg-gray-200">
            <div class="container mx-auto h-full">
                <div class="bg-white shadow h-full p-4 sm:p-6 xl:p-8 ">
                    <div class="font-bold text-black tracking-wide text-xl mb-16">Tableau de bord</div>

                    <div class="container mx-auto px-4 py-6">
                        <h1 class="text-xl font-semibold mb-6">Inviter un Etudiant</h1>
                        <form method="post" action="{{ path('invite_student') }}"> <!-- Remplacez avec le nom de votre route -->
                            <div class="mb-4">
                                <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
                                <input type="email" id="email" name="email" class=" border mt-1 block w-1/2 border-gray-300 shadow-lg focus:ring-orange-500 focus:border-orange-500 rounded-md py-2" required>
                                <!-- Ajouté py-2 pour le padding vertical et shadow-lg pour l'ombre -->
                            </div>

                            <button type="submit" class="px-4 py-2 bg-orange-500 hover:bg-orange-700 text-white rounded-md shadow">Inviter</button>
                            <!-- Ajouté shadow pour le bouton -->
                        </form>
                    </div>
                </div>
            </div>
        </main>
        
    </div>
</div>
{% endblock %}
