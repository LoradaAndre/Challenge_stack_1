{% extends 'base.html.twig' %}

{% block title %}Ajouter un etudiant dans la classe{% endblock %}

{% block body %}



  <div class="min-h-screen flex flex-col">
    <div class="flex-1 flex flex-row ">
        
        {% include '/dashboards/navbar.html.twig' %}

        <main class="flex-1 overflow-x-hidden overflow-y-auto bg-gray-200">
            <div class="container mx-auto  h-full">
                
                <div class="bg-white shadow  h-full p-4 sm:p-6 xl:p-8 ">
                <div class="font-bold text-black tracking-wide text-xl mb-16">Tableau de bord</div>

                <div class="container mx-auto px-4 py-6">
                <h1 class="text-xl font-semibold mb-6">Inviter un élève</h1>
                <form method="post" action="{{ path('invite_student') }}"> <!-- Remplacez avec le nom de votre route -->
                    <div class="mb-4">
                        <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
                        <input type="email" id="email" name="email" class="mt-1 block w-full border-gray-300 shadow-sm focus:ring focus:border-blue-300 rounded-md" required>
                    </div>

                    <div class="mb-6">
                        <label for="classe" class="block text-sm font-medium text-gray-700">Associer à une classe</label>
                        <select id="classe" name="classe" class="block w-full mt-1 border-gray-300 shadow-sm focus:ring focus:border-blue-300 rounded-md">
                            <option value="">Sélectionnez une classe...</option>
                            {# Ici, vous pouvez faire une boucle sur les classes que vous pourriez avoir #}
                            {# {% for classe in classes %}
                                <option value="{{ classe.id }}">{{ classe.nom }}</option>
                            {% endfor %} #}
                        </select>
                    </div>
                    <button type="submit" class="px-4 py-2 bg-blue-500 hover:bg-blue-700 text-white rounded-md">Inviter l'élève</button>
                </form>
            </div>
            </div>
        </main>
        
    </div>
</div>

{% endblock %}