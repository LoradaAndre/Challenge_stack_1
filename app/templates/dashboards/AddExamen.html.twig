{# templates/ajouter_examen.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Ajouter un examen{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-6">
    <h1 class="text-2xl font-bold mb-6">Ajouter un examen</h1>

    <form method="post" action="{{ path('app_AddExamen') }}">
        <div class="mb-4">
            <label class="inline-flex items-center">
                <input type="radio" class="form-radio" name="status" value="published">
                <span class="ml-2">Publié</span>
            </label>
            <label class="inline-flex items-center ml-6">
                <input type="radio" class="form-radio" name="status" value="private">
                <span class="ml-2">Privé</span>
            </label>
        </div>

        <div class="mb-4">
            <label for="titre_examen" class="block text-sm font-medium text-gray-700">Titre de l'examen</label>
            <input type="text" id="titre_examen" name="titre_examen" class="mt-1 block w-full border-gray-300 shadow-sm rounded-md" placeholder="Apprendre HTML / CSS">
        </div>

        <div class="mb-4">
            <label for="cours_lie" class="block text-sm font-medium text-gray-700">Cours lié</label>
            <select id="cours_lie" name="cours_lie" class="block w-full mt-1 border-gray-300 shadow-sm rounded-md">
                <option value="">Sélectionnez un cours...</option>
                <!-- Options du cours à générer ici -->
            </select>
        </div>

        <div class="flex gap-4 mb-4">
            <div class="w-1/2">
                <label for="date_examen" class="block text-sm font-medium text-gray-700">Date de l'examen</label>
                <input type="date" id="date_examen" name="date_examen" class="mt-1 block w-full border-gray-300 shadow-sm rounded-md">
            </div>
            <div class="w-1/2">
                <label for="duree_examen" class="block text-sm font-medium text-gray-700">Durée de l'examen</label>
                <input type="time" id="duree_examen" name="duree_examen" class="mt-1 block w-full border-gray-300 shadow-sm rounded-md">
            </div>
        </div>

        <fieldset class="mb-6">
            <legend class="text-sm font-medium text-gray-700 mb-2">Questions de l'examen</legend>
            <!-- Ici, répéter pour chaque question -->
            <div class="mb-4">
                <label for="question1" class="block text-sm font-medium text-gray-700">Question 1</label>
                <input type="text" id="question1" name="questions[]" class="mt-1 block w-full border-gray-300 shadow-sm rounded-md" placeholder="Intitulé de la question">
                <!-- Réponses pour la question 1 ici -->
            </div>
            <!-- Ajouter plus de questions ici -->
        </fieldset>

        <div class="flex justify-between">
            <button type="submit" class="inline-flex items-center px-4 py-2 bg-blue-500 hover:bg-blue-700 text-white font-bold rounded-md">Enregistrer le titre du cours</button>
            <button type="button" class="inline-flex items-center px-4 py-2 bg-red-500 hover:bg-red-700 text-white font-bold rounded-md">Supprimer</button>
        </div>
    </form>
</div>
{% endblock %}
